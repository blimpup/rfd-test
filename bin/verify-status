#! /usr/bin/env bash

set -e

if [[ -f 'index.adoc' ]]; then
    if grep -qE '^\:status\: (committed|abandoned)$' index.adoc; then
        echo "Mergable"
    else
        echo "Does not have mergable status"
        exit 1
    fi
elif [[ -f 'index.md' ]]; then
    if grep -qE '^status\: (committed|abandoned)$' index.md; then
        echo "Mergable"
    else
        echo "Does not have mergable status"
        exit 1
    fi
fi

